<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_container"
    android:backgroundTint="@color/white"
    android:padding="30dp"
    android:layout_marginBottom="30dp"
    android:alpha="0.90">




    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Course Name"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_course_time"/>

    <TextView
        android:id="@+id/tv_prof_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Professor"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_course_name"
        app:layout_constraintEnd_toStartOf="@id/tv_course_slots"/>

    <TextView
        android:id="@+id/tv_course_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_prof_name" />

    <TextView
        android:id="@+id/tv_course_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Course Date/Time"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_course_slots"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Slots"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_course_time"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/bt_course_action"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:paddingHorizontal="20dp"
        android:text="ADD COURSE"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_course_slots" />




</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_container"
    android:backgroundTint="@color/white"
    android:padding="30dp"
    android:layout_marginBottom="30dp"
    android:alpha="0.90">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_prof_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/default_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedCorners" />

    <TextView
        android:id="@+id/tv_prof_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_prof_pic"/>

    <TextView
        android:id="@+id/tv_prof_department"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Department in"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_prof_name"
        app:layout_constraintEnd_toStartOf="@id/iv_prof_pic"/>

    <TextView
        android:id="@+id/tv_prof_courses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Courses"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_prof_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_prof_department" />


</androidx.constraintlayout.widget.ConstraintLayout>